{
	"extends": "wikimedia/server",
	"env": {
		"commonjs": true,
		"es6": true,
		"mocha": true,
		"node": true
	},
	"globals": {
		"browser": false,
		"$": false
	},
	"parserOptions": {
		"ecmaVersion": 2017
	},
	"rules": {
		"max-len": [ "error", 120 ],
		"jsdoc/no-undefined-types": [ "error", { "definedTypes": [ "Base", "WebdriverIO", "int" ] } ]
	},
	"overrides": [
		{
			"files": "package-lock.json",
			"rules": {
				"max-len": "off"
			}
		}
	]
}
